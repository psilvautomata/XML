import os #Biblioteca de caminhos na rede ou local
import xml.etree.ElementTree as ET #Biblioteca XML Py

diretorio = "C:\\caminho\\para\\diretorio" #Caminho que contém os arquivos XML (ou r"C:\caminho\para\diretorio") - Para Windows, exemplo para py: '/Caminho/pasta'

arquivos_xml = [] #Lista para armazenar os nomes dos arquivos XML

for nome_arquivo in os.listdir(diretorio): #Percorre todos os arquivos no diretório
    if nome_arquivo.endswith('.xml'): #Verifica se o arquivo é xml
        arquivos_xml.append(os.path.join(diretorio, nome_arquivo)) #Adiciona o nome do arquivo identificado à lista

arvore_combinada = ET.ElementTree(ET.Element('root')) #Crie uma árvore/estrutura de XML vazia para armazenamento de elementos

for arquivo in arquivos_xml: #Iteração sobre os arquivos XML identificados e listados
    tree = ET.parse(arquivo)  #Mesclagem de árvore/estrutura de XML para cada arquivo presente na lista
    root = tree.getroot() #Obtém a root com os elementos específicos da árvore/estrutura do arquivo

    for elemento in root: #Iteração sobre os elementos do arquivo para combinar à árvore
        arvore_combinada.getroot().append(elemento) #Combinação

arvore_combinada.write('arquivo_combinado.xml', encoding='utf-8', xml_declaration=True)  #Caminho para Salvar o arquivo XML combinado
#Sintaxe:
#arvore_combinada.write('\\caminho\\completo\\para\\salvar\\arquivo\\arquivo_combinado.xml' - (\ para Windows) - (/ para Linux)
#Se não for especificado o caminho e apenas o nome do arquivo, será salvo na mesma pasta que o cód está sendo executado
